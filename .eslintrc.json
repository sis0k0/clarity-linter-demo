{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": ["clarity-migration"],
    "rules": {
        "clarity-migration/no-clr-button": "error"
    },
    "overrides": [
        {
            "files": ["*.html"],
            "parser": "eslint-html-parser"
        }
    ]
}
